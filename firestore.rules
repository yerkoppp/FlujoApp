rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
  
    // --- Funciones de Ayuda ---
    
    function isAuth() {
      return request.auth != null;
    }
    
    function isUser(userId) {
      return isAuth() && request.auth.uid == userId;
    }
    
    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }
    
    function isAdmin() {
      return isAuth() && getUserData().role == 'ADMINISTRADOR';
    }
    
    function isWorker() {
       return isAuth() && getUserData().role == 'TRABAJADOR';
    }
    
    // --- Reglas por ColecciÃ³n ---
    
    match /users/{userId} {
      allow read: if isAuth();
      allow get: if isUser(userId) || isAdmin();
      allow list: if isAdmin();
      allow create: if isAdmin();
      allow update: if isAdmin() || isUser(userId);
      //allow update: if request.auth != null && request.auth.uid == userId;
      allow delete: if isAdmin();
      //allow delete: if request.auth != null && 
                   //   get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'ADMINISTRADOR';
    }
    
    match /material_requests/{requestId} {
      //allow read: if request.auth != null;
      //allow create: if request.auth != null;
      //allow update: if request.auth != null;
      
      //Lectura: Admin todas, Trabajador solo las suyas
      allow read: if isAdmin() || 
                     (isWorker() && resource.data.workerId == request.auth.uid);
      
      allow list: if isAuth();
      
      // Crear: Solo Trabajador puede crear solicitudes a su nombre
      allow create: if isWorker() && 
                       request.resource.data.workerId == request.auth.uid &&
                       request.resource.data.status == 'PENDIENTE' &&
                       request.resource.data.quantity is int &&
                       request.resource.data.quantity > 0 &&
                       request.resource.data.warehouseId is string &&
                       request.resource.data.materialId is string;
       
      // Actualizar: 
      // - Admin puede cambiar status a APROBADO, RECHAZADO, ENTREGADO
      // - Trabajador solo puede cambiar a CANCELADO si estÃ¡ PENDIENTE
      allow update: if (isAdmin() &&
                         // Admin no puede cambiar estos campos inmutables
                         request.resource.data.workerId == resource.data.workerId &&
                         request.resource.data.materialId == resource.data.materialId &&
                         request.resource.data.warehouseId == resource.data.warehouseId &&
                         request.resource.data.quantity == resource.data.quantity)
                       ||
                       (isWorker() &&
                         resource.data.workerId == request.auth.uid &&
                         resource.data.status == 'PENDIENTE' &&
                         request.resource.data.status == 'CANCELADO' &&
                         // El trabajador solo puede cambiar el status
                         request.resource.data.diff(resource.data).affectedKeys()
                           .hasOnly(['status']));
      
      // Borrar: Nadie
      allow delete: if false;
    }
    
    match /document_assignments/{assignmentId} {
      // Lectura: Admin todas, Trabajador solo las suyas
      allow read: if request.auth != null;
      allow read: if isAdmin() || 
                     (isWorker() && resource.data.workerId == request.auth.uid);
      allow list: if isAuth();
      // Crear: Solo Admin
      allow create: if isAdmin();
      
      // Actualizar: Admin todo, Trabajador solo puede firmar
      allow update: if isAdmin() || 
                       (isWorker() && 
                        resource.data.workerId == request.auth.uid &&
                        resource.data.status == 'PENDIENTE' &&
                        request.resource.data.status == 'FIRMADO' &&
                        request.resource.data.diff(resource.data).affectedKeys()
                          .hasOnly(['status', 'signedDate', 'signatureUrl']));
      
      allow delete: if isAdmin();
    }
    
    match /document_templates/{templateId} {
      allow read: if isAuth();
      allow write: if isAdmin();
    }
    
    // --- COLECCIÃ“N: vehicles ---
    match /vehicles/{vehicleId} {
      allow read: if isAuth();
      allow write: if isAdmin();
    }
    
    // --- COLECCIÃ“N: warehouses ---
    match /warehouses/{warehouseId} {
      allow read: if isAuth();
      allow create, delete: if isAdmin();
      allow update: if isAdmin();
      
      // --- SUBCOLECCIÃ“N: stock ---
      match /stock/{stockItemId} {
        allow read: if isAuth();
        allow write: if isAdmin();
      }
    }
    
    // --- COLECCIÃ“N: materials ---
    match /materials/{materialId} {
      allow read: if isAuth();
      allow write: if isAdmin();
    }
    
    // --- COLECCIÃ“N: inventory_items (Deprecada, solo si aÃºn se usa) ---
    match /inventory_items/{itemId} {
      allow read: if isAuth();
      allow write: if isAdmin();
    }
    
    // ðŸ”’ Por defecto TODO se deniega si no coincide con las reglas anteriores
  }
}